<Window x:Class="WpfSimpleMessageBox.Test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfSimpleMessageBox.Test"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
  <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">

    <Button Content="弹出Info" Width="120" Height="40"
              Click="ShowCustomMessageBox_Click"
              HorizontalAlignment="Center" VerticalAlignment="Center"/>

    <Button Content="弹出Warning" Width="120" Height="40"
            Click="ShowWarningMessageBox_Click"
            HorizontalAlignment="Center" VerticalAlignment="Center"/>

    <Button Content="弹出Error" Width="120" Height="40"
            Click="ShowErrorMessageBox_Click"
            HorizontalAlignment="Center" VerticalAlignment="Center"/>

    <Button Content="弹出Confirm" Width="120" Height="40"
            Click="ShowConfirmMessageBox_Click"
            HorizontalAlignment="Center" VerticalAlignment="Center"/>
  </StackPanel>
</Window>
